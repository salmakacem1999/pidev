{% extends 'baseClient.html.twig' %}

{% block body %}
     <div class="page-wrapper">
   <div class="page-wrapper">
        <div class="container-xl">
          <div class="page-header d-print-none">
            <div class="row align-items-center">
              <div class="col">
                <h2 class="page-title">Apply for a checkbook</h2>
              </div>
            </div>
          </div>
        </div>
     <div class="page-body">
     <div class="container-xl">
         <div class="row row-cards">
              <div class="col-12">                 
                  <div class="card-p5">
                             {{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
                                        <div class="form-group">
                                            <label class="form-label required">Checkbook</label>
                                              {{form_label(form.idtypecarnet,'Checkbook: ',{'attr':{'class':'form-label'}})}}
                                              {{form_widget(form.idtypecarnet,{'attr':{'class':'form-select'}})}}
                                        </div>
                                        <div class="form-group mb-3 mt-3">    
                                                                      
                                              {{form_label(form.email,'Email: ',{'attr':{'class':'form-label'}})}}
                                              {{form_widget(form.email,{'attr':{'class':'form-control'}})}}
                                        </div>
                                        <div class="form-group mb-3 mt-3">
                                 
                                             {{form_label(form.identifier,'identifier: ',{'attr':{'class':'form-label'}})}}
                                              {{form_widget(form.identifier,{'attr':{'class':'form-control'}})}}
                                        </div>
                                            <div class="form-group mb-3">
                                                {{form_label(form.cinS1,'CIN Side 1: ',{'attr':{'class':'form-label'}})}}
                                                {{form_widget(form.cinS1,{'attr':{'class':'form-control'}})}}
                                            </div>
                                             <div class="form-group mb-3">
                                                {{form_label(form.cinS2,'CIN Side 2: ',{'attr':{'class':'form-label'}})}}
                                                {{form_widget(form.cinS2,{'attr':{'class':'form-control'}})}}
                                            </div>
                                             <div class="form-group mb-3">
                                                {{form_label(form.document,'Document: ',{'attr':{'class':'form-label'}})}}
                                                {{form_widget(form.document,{'attr':{'class':'form-control'}})}}
                                            </div>
                                        <div class="form-group mb-3">
                                        
                                              {{form_label(form.description,'Description: ',{'attr':{'class':'form-label'}})}}
                                              {{form_widget(form.description,{'attr':{'class':'form-control summernote'}})}}

                                        </div>
                                        <div class="form-footer">  
                                         {{form_widget(form.save,{'attr':{'class':'btn btn-primary w-100'}})}}                                      
                                        </div>                             
                        {{form_end(form)}}              
                   </div>
             </div>
         </div>
     </div>
          </div>
        </div>
      </div>        
    </div>   
{% endblock %}